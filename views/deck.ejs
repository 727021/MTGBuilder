<!DOCTYPE html>
<html lang="en">
  <head>
    <%include partials/head %>
  </head>
  <body>
    <div id="errToast" class="toast" style="position: absolute; top: 10px; right: 15px;" data-delay="1500">
        <div class="toast-header">
            <strong class="mr-auto">MTGBuilder</strong>
        </div>
        <div class="toast-body text-dark" id="errToastContent">
        </div>
    </div>
    <%include partials/navbar %>
    <div class="container my-2 bg-dark">
        <div class="row">
            <div class="input-group">
                <% if (user) { %>
                <button data-deck="<%= deck.id %>" id="copyDeck" class="btn btn-success" data-toggle="tooltip" data-placement="left" title="Copy"><i class="far fa-copy"></i></button>
                <% } else { %>
                <a href="/login" class="btn btn-success" role="button" data-toggle="tooltip" data-placement="left" title="Copy"><i class="far fa-copy"></i></a>
                <% } %>
                <input class="form-control" readonly type="text" name="deckTitle" id="deckTitle" placeholder="Deck Title" value="<%= deck ? deck.title : '' %>">
            </div>
        </div>
        <div class="row">
            <div class="col-5 border-default border-right px-0 pt-1">
                <table class="table table-hover card-list m-0">
                    <thead><tr><th class="align-middle p-2">Total Cards: <span id="totalCards"><%= deck.cardTotal %></span></th></tr></thead>
                    <tbody id="deckCards">
                    <% deck.cards.forEach(card => { %>
                        <tr>
                            <td class="align-middle p-0">
                                <button class="btn btn-dark" disabled><%= card.count %></button>
                                <span class="searchName" data-img="<%= card.img %>"><%= card.name %></span>
                            </td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="col pt-1">
                <div class="container" id="cardDetails">
                </div>
            </div>
        </div>
    </div>
    <%include partials/scripts %>
  </body>
</html>
