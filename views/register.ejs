<!DOCTYPE html>
<html lang="en">
<head>
    <%include partials/head %>
</head>
<body>
    <%include partials/navbar-empty %>

    <div class="container mt-2 bg-dark px-0">
        <div class="alert alert-danger text-center mb-0" role="alert" style="display: none;" id="formError"></div>
        <div class="alert alert-success text-center mb-0" role="alert" style="display: none;" id="regSuccess">
            Registration successful
        </div>
        <form id="registerForm" action="/register" method="POST">
            <div class="row text-center">
                <div class="col-2 d-none d-md-block"></div>
                <div class="col-10 col-md-4 px-1 mx-auto pt-2"><input type="text" name="username" id="username" class="form-control" placeholder="Username"></div>
                <div class="col-10 col-md-4 px-1 mx-auto pt-2"><input type="text" name="email" id="email" class="form-control" placeholder="Email"></div>
                <div class="col-2 d-none d-md-block"></div>
            </div>
            <div class="row text-center">
                <div class="col-2 d-none d-md-block"></div>
                <div class="col-10 col-md-4 px-1 mx-auto pt-2"><input type="password" name="password" id="password" class="form-control" placeholder="Password"></div>
                <div class="col-10 col-md-4 px-1 mx-auto pt-2"><input type="password" name="confirm" id="confirm" class="form-control" placeholder="Confirm password"></div>
                <div class="col-2 d-none d-md-block"></div>
            </div>
            <div class="row text-center pb-2">
                <div class="col-2"></div>
                <div class="col-4 px-1 mx-auto pt-2 text-right"><button type="submit" class="btn btn-success">Register</button></div>
                <div class="col-4 px-1 mx-auto pt-2 text-left"><a href="/login" class="btn btn-outline-primary" role="button">Log In</a></div>
                <div class="col-2"></div>
            </div>
        </form>
    </div>

    <%include partials/scripts %>
</body>
</html>